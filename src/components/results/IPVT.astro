<article
    id=`vtip`
    class="max-w-sm p-6 bg-purple-800/30 border border-gray-400/50 rounded-lg shadow hidden"
>
    <h3 id=`vtip-title` class="mb-2 text-2xl font-bold text-white"></h3>

    <h4 class="mt-4 text-lg font-bold">Información general</h4>
    <ul class="text-gray-300">
        <li>
            <strong>Reputación: </strong>
            <span id=`vtip-reputation` class="text-base font-normal"> </span>
        </li>
        <li>
            <strong
                >Propietario: <span
                    id=`vtip-owner`
                    class="text-base font-normal"></span>
            </strong>
        </li>
        <li>
            <strong>País: </strong>
            <span id=`vtip-country` class="text-base font-normal"> </span>
        </li>
    </ul>

    <h4 class="mt-4 text-lg font-bold">Detecciones por vendors de seguridad</h4>
    <ul class="text-gray-300">
        <li>
            <strong
                >Inofensivo: <span
                    id=`vtip-analysis-harmless`
                    class="text-base font-normal"></span></strong
            >
        </li>
        <li>
            <strong>Malicioso: </strong><span
                id=`vtip-analysis-malicious`
                class="text-base font-normal"></span>
            <li>
                <strong
                    >Sospechoso: <span
                        id=`vtip-analysis-suspicious`
                        class="text-base font-normal"
                    >
                    </span></strong
                >
            </li>
            <li>
                <strong
                    >No hay información: <span
                        id=`vtip-analysis-undetected`
                        class="text-base font-normal"
                    >
                    </span></strong
                >
            </li>
            <li>
                <strong
                    >No hubo respuesta: <span
                        id=`vtip-analysis-timeout`
                        class="text-base font-normal"></span></strong
                >
            </li>
        </li>
    </ul>

    <h4 class="mt-4 text-lg font-bold">Votos de reputación</h4>
    <ul class="text-gray-300">
        <li>
            <strong
                >Inofensivo: <span
                    id=`vtip-votes-harmless`
                    class="text-base font-normal"
                >
                </span></strong
            >
        </li>

        <li></li><strong
            >Malicioso: <span
                id=`vtip-votes-malicious`
                class="text-base font-normal"
            >
            </span></strong
        >
    </ul>
</article>
